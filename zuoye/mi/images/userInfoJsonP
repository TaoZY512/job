<script>
var LANG=(function(){
    var locale=("zh_CN").toLowerCase();
    if(locale){
      if(locale.indexOf("en")>-1){
        return {data:"en",cls:"en"};
      }else if(locale.indexOf("zh")>-1){
        if(locale.indexOf("cn")===-1){
          return {data:"tw",cls:"zh_TW"};
        }else{
          return {data:"cn",cls:"zh_CN"};
        }
      }
    }
    return {data:"en",cls:"en"};
})();
</script>

